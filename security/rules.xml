<odoo>
    <data noupdate="1">
        <record id="rule_journal_personal_only" model="ir.rule">
            <field name="name">Спеціаліст: бачить лише своє</field>
            <field name="model_id" ref="model_specialist_journal"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_specialist_user'))]"/>
        </record>

        <record id="rule_journal_admin_all_records" model="ir.rule">
            <field name="name">Адмін: бачить абсолютно все</field>
            <field name="model_id" ref="model_specialist_journal"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_specialist_admin'))]"/>
        </record>
    </data>
</odoo>