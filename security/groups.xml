<odoo>
    <record id="module_category_specialist_journal" model="ir.module.category">
        <field name="name">Журнал спеціаліста</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_specialist_user" model="res.groups">
        <field name="name">Спеціаліст (Своє)</field>
        <field name="category_id" ref="module_category_specialist_journal"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_specialist_admin" model="res.groups">
        <field name="name">Адміністратор (Все)</field>
        <field name="category_id" ref="module_category_specialist_journal"/>
        <field name="implied_ids" eval="[(4, ref('group_specialist_user'))]"/>
    </record>
</odoo>